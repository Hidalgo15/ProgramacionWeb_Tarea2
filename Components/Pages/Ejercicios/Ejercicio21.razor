@page "/ejercicio21"
@rendermode InteractiveServer 

<PageTitle>Ejercicio21</PageTitle>


<div class="form-group">
    <label for="txtNumero">Ingresa un número entero:</label>
    <input type="number" class="form-control" id="txtNumero" @bind="numero" />
</div>

<div class="form-group">
    <br>
    <button class="btn btn-primary calcular-btn" @onclick="VerificarDigitos">Verificar</button>
    <p class="resultado">El resultado es: @resultado</p>
</div>

@code {
    private int numero = 0;
    private int resultado = 0;

    private void VerificarDigitos()
    {
        // Obtener el último dígito
        int ultimoDigito = numero % 10;

        // Obtener el primer dígito (dividiendo entre 10 sucesivamente hasta que quede un solo dígito)
        int primerDigito = numero;
        while (primerDigito >= 10)
        {
            primerDigito /= 10;
        }

        // Comparar el primer y último dígito
        resultado = primerDigito == ultimoDigito ? 1 : 0;
    }
}