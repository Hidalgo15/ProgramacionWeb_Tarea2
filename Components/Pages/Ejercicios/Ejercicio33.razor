@page "/ejercicio33"
@rendermode InteractiveServer

<PageTitle>Ejercicio33</PageTitle>


<div>
    <label for="numeros">Ingrese 10 números separados por comas:</label>
    <input type="text" id="numeros" @bind="numerosInput" />
</div>

<div>
    <br>
    <label for="numeroBuscar">Ingrese el número a buscar:</label>
    <input type="number" id="numeroBuscar" @bind="numeroBuscar" />
</div>

<button @onclick="BuscarNumero">Buscar</button>

<p>@resultado</p>

@code {
    private string numerosInput ="";
    private int[] numeros = new int[10];
    private int numeroBuscar;
    private int resultado;

    private void BuscarNumero()
    {
        // Convertir la cadena de entrada a un arreglo de enteros
        var numerosStr = numerosInput.Split(',');
        for (int i = 0; i < numeros.Length; i++)
        {
            if (int.TryParse(numerosStr[i], out numeros[i]))
            {
                // Conversión exitosa
            }
            else
            {
                // Manejar error de conversión
                Console.WriteLine("Error al convertir un número");
                return;
            }
        }

        // Buscar el número en el vector
        resultado = 0; // Inicializamos a 0 (no encontrado)
        foreach (int numero in numeros)
        {
            if (numero == numeroBuscar)
            {
                resultado = 1; // Si encontramos el número, cambiamos a 1
                break; // Podemos salir del bucle ya que encontramos el número
            }
        }
    }
}