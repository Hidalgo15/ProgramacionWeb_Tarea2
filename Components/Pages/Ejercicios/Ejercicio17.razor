@page "/ejercicio17"
@rendermode InteractiveServer 

<PageTitle>Ejercicio17</PageTitle>


<div class="form-group">
    <label for="txtNumero">Ingresa un n√∫mero entero:</label>
    <input type="number" class="form-control" id="txtNumero" @bind="numero" />
</div>

<div class="form-group">
    <br>
    <button class="btn btn-primary calcular-btn" @onclick="VerificarDigito">Verificar</button>
    <p class="resultado">El resultado es: @resultado</p>
</div>

@code {
    private int numero = 0;
    private int resultado = 0;

    private void VerificarDigito()
    {
        resultado = numero >= 48 && numero <= 57 ? 1 : 0;
    }
}